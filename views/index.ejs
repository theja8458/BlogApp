<div class="author">
    <h1 class="author_head">Hii, I am Theja</h1>
    <p class="author_body">Web developer.</p>
</div>

<img src="/imgs/hero-image.webp" alt="Person looking out through window" class="hero" width="981" height="528">

<section class="articles">
    <h2 class="articles_heading">
        Latest Post
    </h2>

    <ul class="articles-ul">

        <% data.forEach(post => { %>
             <li>
        <a href="/post/<%= post._id %>">
            <span><%= post.title %></span>
            <span class="articles-date"><%= post.createdAt.toDateString() %></span>
        </a>
     </li>
        <%}) %>
     
    </ul>
     
    <% if (nextPage !== null) { %>
         <a href="/?page=<%= nextPage%>" class="pagination">&lt; View Older Posts</a>
    <% } %>
   
</section>